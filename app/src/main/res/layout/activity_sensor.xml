<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_sensor" />

    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Senzory"
        android:textSize="25sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/divider2"
        android:layout_width="270dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:contentDescription="dashed_line"
        android:layerType="software"
        android:src="@drawable/dashed_line" />

    <TextView
        android:id="@+id/xTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_centerHorizontal="true"
        android:text="X:   \?" />

    <TextView
        android:id="@+id/yTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xTextView"
        android:layout_centerHorizontal="true"
        android:text="Y:   \?" />

    <TextView
        android:id="@+id/zTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yTextView"
        android:layout_centerHorizontal="true"
        android:text="Z:   \?" />

    <TextView
        android:id="@+id/hodnotyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yTextView"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="Hodnoty: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hodnotyTextView"
        android:layout_marginLeft="60dp"
        android:text="Spotřeba: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/powerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hodnotyTextView"
        android:layout_marginLeft="200dp"
        android:text="\?"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/powerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_marginLeft="60dp"
        android:text="Výrobce: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/vendorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_marginLeft="200dp"
        android:text="\?"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/vendorTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:layout_marginLeft="60dp"
        android:text="Verze: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:layout_marginLeft="200dp"
        android:text="\?"
        android:textSize="15sp" />

</RelativeLayout>