<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_battery" />

    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Baterie"
        android:textSize="25sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="60dp"
        android:text="Stav: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="200dp"
        android:text="\? %"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/levelTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_marginLeft="60dp"
        android:text="Status: "
        android:textSize="15sp" />


    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_marginLeft="200dp"
        android:text="\?"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/stateTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_marginLeft="60dp"
        android:text="Teplota: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_marginLeft="200dp"
        android:text="\? °C"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/tempTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:layout_marginLeft="60dp"
        android:text="Voltáž: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/voltageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:layout_marginLeft="200dp"
        android:text="\? V"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider5"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/voltageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider5"
        android:layout_marginLeft="60dp"
        android:text="Technologie: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/technologyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider5"
        android:layout_marginLeft="200dp"
        android:text="\?"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider6"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/technologyTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider6"
        android:layout_marginLeft="60dp"
        android:text="Technický stav: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/techStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider6"
        android:layout_marginLeft="200dp"
        android:text="\?"
        android:textSize="15sp" />


</RelativeLayout>